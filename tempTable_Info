IF OBJECT_ID('tempdb..#TABLENAME') IS NOT NULL DROP TABLE #TABLENAME
SELECT * 
INTO #TABLENAME
FROM OPENQUERY(LINKED_SERVER, 'SELECT * FROM LIBRARY.TABLENAME ')

SELECT TABLE_CATALOG, TABLE_NAME,ORDINAL_POSITION,COLUMN_NAME, DATA_TYPE,
	CASE DATA_TYPE
		when 'varchar' THEN CONVERT(VARCHAR, CHARACTER_MAXIMUM_LENGTH)
		WHEN 'nvarchar' THEN CONVERT(VARCHAR, CHARACTER_MAXIMUM_LENGTH)
		WHEN 'char' THEN CONVERT(VARCHAR, CHARACTER_MAXIMUM_LENGTH)
		WHEN 'decimal' THEN CONVERT(VARCHAR, NUMERIC_PRECISION) + ' , ' + CONVERT(VARCHAR, NUMERIC_SCALE)
		WHEN 'numeric' THEN CONVERT(VARCHAR, NUMERIC_PRECISION) + ' , ' + CONVERT(VARCHAR, NUMERIC_SCALE)
	ELSE '' --date, int, float, money, DateTime,bit
END as Length_Precision
, IS_NULLABLE
FROM tempdb.INFORMATION_SCHEMA.COLUMNS
WHERE TABLE_NAME LIKE '%TABLENAME%'
